{
  "name": "emitron",
  "version": "0.2.0",
  "description": "A simple pub/sub (Event Emitter) library.",
  "main": "dist/emitron.cjs.js",
  "module": "dist/emitron.esm.js",
  "browser": "dist/emitron.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/emitron.esm.js",
    "require": "./dist/emitron.cjs.js"
  },
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "test:types": "tsc --noEmit --strict tests/types.ts",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run test:types && npm run lint",
    "preversion" : "npm run lint",
    "version" : "git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "keywords": [
    "event emitter",
    "eventsemitter",
    "pub sub",
    "publish subscribe",
    "mitt",
    "events",
    "eventemitter",
    "emitter",
    "pubsub"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/theboxer/emitron"
  },
  "bugs": {
    "url": "https://github.com/theboxer/emitron/issues"
  },
  "funding": "https://github.com/sponsors/theboxer",
  "homepage": "https://github.com/theboxer/emitron",
  "authors": [
    "Jan Peca <pecajan@gmail.com>"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "rollup": "^4.18.0",
    "ts-jest": "^29.1.4",
    "tslib": "^2.6.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "files": [
    "dist"
  ]
}
